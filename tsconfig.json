{
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./",
    "outDir": "./build",
    "module": "CommonJS",
    "target": "ESNext",
    "lib": [
      "ESNext"
    ],
    "moduleResolution": "Node",
    "types": [
      "node",
      "express"
    ],
    "strict": true,
    "pretty": true,
    "allowJs": true,
    "sourceMap": true,
    "composite": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUncheckedIndexedAccess": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@root/*": [
        "."
      ],
      "@lib/*": [
        "lib/*"
      ],
      "@dto": [
        "lib/dto"
      ],
      "@dto/*": [
        "lib/dto/*"
      ],
      "@enums": [
        "lib/enums"
      ],
      "@enums/*": [
        "lib/enums/*"
      ],
      "@mailer": [
        "lib/mailer"
      ],
      "@mailer/*": [
        "lib/mailer/*"
      ],
      "@models": [
        "lib/models"
      ],
      "@models/*": [
        "lib/models/*"
      ],
      "@schemas": [
        "lib/schemas"
      ],
      "@schemas/*": [
        "lib/schemas/*"
      ],
      "@sms": [
        "lib/sms"
      ],
      "@sms/*": [
        "lib/sms/*"
      ],
      "@utils": [
        "lib/utils"
      ],
      "@utils/*": [
        "lib/utils/*"
      ]
    },
  },
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ],
    "files": true
  },
  "include": [
    "./lib/**/*",
    "./src/**/*",
  ],
  "exclude": [
    "node_modules",
    "./build",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}