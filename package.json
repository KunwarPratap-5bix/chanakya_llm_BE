    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/crypto-js": "^4.2.2",
    "@types/ejs": "^3.1.5",
    "@types/email-templates": "^10.0.4",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/lodash": "^4.17.15",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.7.5",
    "@types/nodemailer": "^6.4.17",
    "@types/qrcode": "^1.5.6",
    "@types/swagger-ui-express": "^4.1.7",
    "@types/yamljs": "^0.2.34",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "copy-files-from-to": "^3.11.0",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "nodemon": "^3.1.7",
    "path-exists-cli": "^2.0.0",
    "prettier": "^3.5.2",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1"
  },
  "nodemonConfig": {
    "verbose": true,
    "watch": [
      "./src",
      "./lib"
    ],
    "ext": "ts,ejs",
    "ignore": [
      "*.test.ts",
      "*.spec.ts",
      "*.yaml"
    ],
    "delay": 1500,
    "execMap": {
      "ts": "ts-node"
    }
  },
  "copyFiles": [
    {
      "from": "src/views/**/*",
      "to": "build/src/views/"
    },
    {
      "from": "src/static/**/*",
      "to": "build/src/static/"
    },
    {
      "from": "src/docs/**/*",
      "to": "build/src/docs/"
    },
    {
      "from": "lib/mailer/templates/*/**",
      "to": "build/lib/mailer/templates/"
    }
  ],
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix .",
      "prettier --write .",
      "git add ."
    ]
  }
}
