{
  "name": "Chanakya_LLM-api",
  "version": "1.0.0",
  "description": "Chanakya_LLM API",
  "private": true,
  "repository": "",
  "engines": {
    "node": ">=20.18.0",
    "npm": ">=10.8.2"
  },
  "scripts": {
    "lint": "eslint --fix .",
    "format": "prettier --write .",
    "lint-staged": "lint-staged",
    "prebuild": "echo \"âŒ removing older build. âŒ\" && npx rimraf build",
    "build": "echo \"ğŸ’ª creating build. ğŸ’ª\" && npx tsc && npx copy-files-from-to",
    "postbuild": "npx tsc-alias && echo \"ğŸ”¥ build successful. ğŸ”¥\"",
    "postinstall-prod": "echo \"ğŸ’€ skipping husky installation for production environment. ğŸ’€\"",
    "postinstall-dev": "husky",
    "postinstall": "if-env NODE_ENV=production && npm run postinstall-prod || npm run postinstall-dev",
    "start": "npx path-exists build && echo \"ğŸ˜Š build already exists. ğŸ˜Š\" || npm run build && node build/src/index.js",
    "watch": "nodemon src/index.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.758.0",
    "@aws-sdk/s3-request-presigner": "^3.750.0",
    "@sendgrid/mail": "^8.1.4",
    "@simonsmith/ejs-mate": "^4.1.0",
    "@socket.io/redis-adapter": "^8.3.0",
    "agenda": "^5.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "connect-mongo": "^5.1.0",
    "crypto-js": "^4.2.0",
    "custom-env": "^2.0.6",
    "ejs": "^3.1.10",
    "email-templates": "^13.0.1",
    "exceljs": "^4.4.0",
    "express": "^4.21.1",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.5.0",
    "if-env": "^1.0.4",
    "ioredis": "^5.8.2",
    "joi": "^17.13.3",
    "json-2-csv": "^5.5.8",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "moment-timezone": "^0.5.47",
    "mongoose": "^8.9.3",
    "morgan": "^1.10.0",
    "nodemailer": "^7.0.12",
    "openai": "^6.8.1",
